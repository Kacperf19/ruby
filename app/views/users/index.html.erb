<p style="color: green"><%= notice %></p>

<% content_for :title, "Users" %>

<h1>Users</h1>

<%= link_to "New user", new_user_path, class: 'btn btn-suc' %>

<div id="movies">
  <% @users.each do |user| %>
    <div class="movie-item">
      <%= render user %>
      <div class="movie-actions">
        <%= link_to "Show this user", user, class: 'btn btn-primary' %>
        <%= link_to "Edit", edit_user_path(user), class: 'btn btn-warning' %>
        <%= button_to "Delete", user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
      </div>
    </div>
  <% end %>
</div>


